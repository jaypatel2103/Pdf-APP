#:kivy 1.11.1

<Toolbar@MDToolbar>:
    # id: mainscrtoolbar
    pos_hint: {"top": 1}
    elevation: 8

Display_main:
    # manager: manager
    name: 'Screen'
    NavigationLayout:
        id: nav_layout

        ScreenManager:
            id: manager
            Mainscreen:
            Img2pdfscreen:

        MDNavigationDrawer:
            id: nav_drawer
            ScrollView:

                MDList:

                    OneLineListItem:
                        text: "Home"
                        # on_press:
                        #     root.nav_drawer.set_state("close")
                        on_release: 
                            app.change_screen('img2pdfscr',"is_drawer_call")
                            app.root.ids.nav_drawer.set_state('close')

                    OneLineListItem:
                        text: "About us"
                        # on_press:
                        #     root.nav_drawer.set_state("close")
                        #     root.screen_manager.current = "scr 2"

                    OneLineListItem:
                        text: "Emperrorbros@gmail.com"
                        # on_press:
                        #     root.nav_drawer.set_state("close")
                        #     root.screen_manager.current = "scr 3"
                    OneLineListItem:
                        text: "setting"
                        # on_press:
                        #     root.nav_drawer.set_state("close")
                        #     root.screen_manager.current = "scr 4"


<Mainscreen>:
    # id: mainscr
    name: 'mainscr'
    Toolbar:
        title: "PDFMAKER"
        left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state('open')]]

    MDRectangleFlatButton:
        text: 'jay'
        pos_hint: {'center_x':0.5,'center_y':0.6}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'img2pdfscr'


<Img2pdfscreen>:
    id: scr
    name: 'img2pdfscr'

    Toolbar:
        title: "Image to Pdf"
        left_action_items: [['arrow-left', lambda x: app.change_screen('mainscr')]]
    MDFloatingActionButton:
        icon: "plus"
        pos_hint: {'center_x': 0.9,'center_y':0.09}
        md_bg_color: app.theme_cls.primary_color
        on_press: app.open_filemanager()
